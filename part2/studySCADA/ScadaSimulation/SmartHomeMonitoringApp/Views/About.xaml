<mah:MetroWindow x:Class="SmartHomeMonitoringApp.Views.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHomeMonitoringApp.Views"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="About" Height="200" Width="300" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" Loaded="MetroWindow_Loaded">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label x:Name="LblDisplayName" Grid.Row="0" />
        <TextBox Grid.Row="1" x:Name="TxtApplicationInfo" Margin="5" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True"/>
        <Button Grid.Row="2" x:Name="BtnClose" IsDefault="True" Content="OK" Width="80" HorizontalAlignment="Right"  Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"  Click="BtnClose_Click"/>
    </Grid>
</mah:MetroWindow>
